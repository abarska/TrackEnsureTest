<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/station_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/station_name"
        android:inputType="textCapWords"
        android:maxLength="100"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/fuel_type_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_edit_black_32dp"
        android:drawablePadding="@dimen/standard_margin"
        android:gravity="center"
        android:text="@string/octane_87"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/unit_of_measurement_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_edit_black_32dp"
        android:drawablePadding="@dimen/standard_margin"
        android:gravity="center"
        android:text="@string/litre"
        android:textSize="@dimen/textSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/price"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/price_per_unit_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/textSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quantity"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/number_of_units_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/textSize" />

    </LinearLayout>

    <TextView
        android:id="@+id/total_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/total"
        android:textSize="@dimen/textSize" />

</LinearLayout>

